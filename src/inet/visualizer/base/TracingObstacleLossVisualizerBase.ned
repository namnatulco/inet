package inet.visualizer.base;

//
// This is a base module for tracing obstacle loss visualizer simple modules.
//
simple TracingObstacleLossVisualizerBase extends VisualizerBase
{
    parameters:
        string obstacleLossModule = default("radioMedium.obstacleLoss"); // specifies the module path of the tracing obstacle loss module that is displayed
        bool leaveIntersectionTrail = default(true); // display instersections of transmissions and physical objects
        bool leaveFaceNormalVectorTrail = default(true); // display face normal vectors of instersections
}
